@model Payrol.Models.Staff

    <form method="post" asp-action="Create">
        
        <div class="border p-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <h2 class="text-primary">
                    ADD STAFF
                </h2>
            </div>
            <div class="row">
                <div class="col-8">
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StaffName"></label>
                        </div>
                        <div class="col-4">
                            <input asp-for="StaffName" class="form-control" />
                            <span asp-validation-for="StaffName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StaffAge"></label>
                        </div>
                        <div class="col-8">
                            <input asp-for="StaffAge" class="form-control" />
                            <span asp-validation-for="StaffAge" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="StaffDepartmentId">Department</label>
                        </div>
                        <div class="col-8">
                            <select class="form-control" asp-for="StaffDepartmentId" asp-items="@(new SelectList((IEnumerable<Department>) ViewData["departments"],"DepartmentId","DepartmentName"))">
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-2 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-100" value="Create" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success w-100">Back</a>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </form>

    @section Scripts
    {
        @{
            <partial name="_ValidationScriptsPartial" />
        }
    }

