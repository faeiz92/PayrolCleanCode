@model IEnumerable<Payrol.Models.Staff>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">STAFF</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Staff" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>&nbsp; Create New Staff
            </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        Staff Name
                    </th>
                    <th>
                        Staff Age
                    </th>
                    <th>
                        Department
                    </th>
                    <th>
                        Edit or Delete
                    </th>
                </tr>


            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>
                            @obj.StaffName
                        </td>
                        <td>
                            @obj.StaffAge
                        </td>
                        <td>
                            @obj.Department.DepartmentName
                        </td>
                        <td class="center">
                            <a asp-controller="Staff" asp-route-Id="@obj.StaffId" asp-action="Edit" class="btn btn-primary">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-controller="Staff" asp-route-Id="@obj.StaffId" asp-action="Delete" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    }

    else
    {
        <p>
            Not Exist
        </p>

    }


</div>

