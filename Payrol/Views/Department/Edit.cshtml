@model Payrol.Models.Department

<form method="post" asp-action="Edit">
    <input asp-for="DepartmentId" type="hidden" />
    <div class="border p-3">
        <div>
            <h2 class="text-primary">
                EDIT DEPARTMENT
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DepartmentName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentLocation"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DepartmentLocation" class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                            <button type="submit" class="btn btn-success" value="Update">
                                <i class="fas fa-edit"></i>
                            </button>
                        &nbsp;
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-step-backward"></i>
                            </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    @{<partial name="_ValidationScriptsPartial" />}
}

