@model Payrol.Models.Department

<form method="post" asp-action="DeletePost">
    <input asp-for="DepartmentId" type="hidden" />
    <div class="border p-3">
        <div> 
            <h2 class="text-primary">
                DELETE DEPARTMENT
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DepartmentName" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DepartmentLocation"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DepartmentLocation" disabled class="form-control" />
                        
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                            <a asp-controller="Department" asp-route-Id="@Model.DepartmentId" asp-action="DeletePost" class="btn btn-danger">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            &nbsp;
                            <a asp-action="Index" class="btn btn-danger">
                            <i class="fas fa-step-backward"></i>
                            </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</form>


